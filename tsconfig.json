{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@app/common": ["libs/common/src"],
      "@app/common/*": ["libs/common/src/*"]
    },
    "composite": true,
    "declaration": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
  },
  "exclude": ["node_modules", "services/*/dist", "libs/*/dist"],
  "references": [{ "path": "./libs/common" }, { "path": "./services/auth" }, { "path": "./services/reservations" }]
}
